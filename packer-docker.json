{
  "builders": [
      {
      "type": "docker",
      "image": "cloudurable/cassandra-base:0.2",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "resources",
      "destination" : "/root"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/001-docker-prepare-systemd.sh",
        "scripts/010-tune-os.sh",
        "scripts/020-cassandra.sh",
        "scripts/030-cassandra-cloud.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "cloudurable/cassandra",
        "tag": "0.6.0"
      },
     "docker-push",
      {
        "type": "docker-tag",
        "repository": "cloudurable/cassandra",
        "tag": "latest"
      },
      "docker-push"
    ]
  ]
}
