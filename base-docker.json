{
  "builders": [
    {
      "type": "docker",
      "image": "centos:centos7.3.1611",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "resources",
      "destination" : "/root"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/000-provision.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "cloudurable/cassandra-base",
        "tag": "0.1"
      },
      "docker-push",
      {
        "type": "docker-tag",
        "repository": "cloudurable/cassandra-base",
        "tag": "latest"
      },
      "docker-push"
    ]
  ]
}
